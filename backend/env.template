# Resume Evaluation System - Environment Variables Template
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration (Required for LLM features)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./resume_evaluation.db

# Server Configuration
DEBUG=true
HOST=0.0.0.0
PORT=8000

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=data/uploads

# LLM Settings
MODEL_NAME=gpt-3.5-turbo
TEMPERATURE=0.1
MAX_TOKENS=1000

# Evaluation Thresholds
HIGH_SUITABILITY_THRESHOLD=80.0
MEDIUM_SUITABILITY_THRESHOLD=60.0

# Security Note:
# - Never commit the actual .env file to version control
# - Use GitHub Secrets for deployment
# - Keep your API keys secure and private
